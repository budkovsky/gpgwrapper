<phpdox xmlns="http://xml.phpdox.net/config">
 <bootstrap>
    <require>${basedir}/../vendor/autoload.php</require>
 </bootstrap>
 <project name="name-of-project" source="${basedir}/../src" workdir="build/phpdox">
  <collector publiconly="false">
   <include mask="*.php" />
  </collector>

  <generator output="build">
   <build engine="html" enabled="true" output="api">
    <file extension="html" />
   </build>
  </generator>
 </project>
</phpdox>
